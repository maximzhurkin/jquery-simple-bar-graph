.simple-bar-graph
	position relative
	&__columns
		padding-top 16px
		padding-bottom 16px
		position relative
	&__column
		position relative
		float left
		height 100%
		vertical-align bottom
	&__caption,
	&__rows
		position absolute
	&__bar
		position absolute
		left 2px
		right 2px
		bottom 0
		opacity .8
		background-color rgba(#000, .15)
		border-top-left-radius 2px
		border-top-right-radius 2px
		transition height .2s ease-in-out
		backface-visibility hidden
		transform scale(1)
		&--active
			opacity 1
			box-shadow 0 0 6px rgba(#000, .1)
			z-index 10
	&__bar--active &__popup
		display block
	&__caption
		left 0
		right 0
		bottom -16px
		text-align center
		font-size (9 / 16em)
		line-height 10px
	&__rows
		width 100%
		top 16px
		left 0
		right 0
		bottom 16px
	&__row
		position relative
		border-top 1px dashed rgba(#000, .1)
	&__null
		position absolute
		width 100%
		left 0
		bottom 0
		height 1px
		background-color rgba(#000, .1)
	&__caption,
	&__value
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
	&__value
		position absolute
		right 0
		top -8px
		font-size (9 / 16em)
		line-height 10px
	&__popup
		padding-top 4px
		padding-left 4px
		padding-right 4px
		padding-bottom 4px
		position absolute
		display none
		top -4px
		left 50%
		width auto
		font-size (11 / 16em)
		font-weight 300
		line-height (11 / 11em)
		color #fff
		background-color #000
		box-shadow 4px 0 6px rgba(#000, .1)
		border-radius 4px
		border 1px solid #fff
		&:before,
		&:after
			position absolute
			top 50%
			content ''
			display block
			width 0
			height 0
			border-style solid
		&:before
			margin-top -6px
			left -6px
			border-width 6px 6px 6px 0
			border-color transparent rgba(#fff, .85) transparent transparent
			z-index -1
		&:after
			margin-top -4px
			left -4px
			border-width 4px 4px 4px 0
			border-color transparent #000 transparent transparent
			z-index 2
